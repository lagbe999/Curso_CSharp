<Window x:Class="Taller_77_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taller_77_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Width="600" Name="miCuadro" Margin="50" Background="White" Foreground="Black" Text="{Binding ElementName=miSlider, Path=Value, Mode=TwoWay}" TextAlignment="Center"></TextBox>

        <Slider Width="600" Name="miSlider" Minimum="0" Maximum="100" Background="White" Foreground="Crimson" ></Slider>

    </StackPanel>
</Window>
